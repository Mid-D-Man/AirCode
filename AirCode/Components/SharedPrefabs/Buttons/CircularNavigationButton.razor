@namespace AirQrCode.Components.SharedPrefabs

<div class="circular-button-container @(IsActive ? "active" : "")" @onclick="HandleClick">
    <button class="circular-button @ButtonClass">
        <div class="button-content">
            @if (!string.IsNullOrEmpty(IconSvgContent))
            {
                @((MarkupString)IconSvgContent)
            }
            else if (!string.IsNullOrEmpty(IconPath))
            {
                <img src="@IconPath" alt="@Text" class="button-icon" />
            }
        </div>
    </button>
    <span class="button-text">@Text</span>
    @if (IsActive)
    {
        <div class="active-indicator"></div>
    }
</div>

@code {
    //the circular nav menu button for client navmenu.... works 
    //but could use some css updates and color changes consider later
    [Parameter]
    public string IconPath { get; set; }

    [Parameter]
    public string IconSvgContent { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public string ButtonClass { get; set; } = "";

    [Parameter]
    public bool IsActive { get; set; } = false;

    [Parameter]
    public EventCallback OnClick { get; set; }

    private async Task HandleClick()
    {
        await OnClick.InvokeAsync();
    }
}