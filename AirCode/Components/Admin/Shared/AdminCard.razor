@* Components/Admin/Shared/AdminCard.razor *@
<div class="admin-card">
    <div class="card-header">
        <h3>@Title</h3>
    </div>
    <div class="card-content">
        @Content
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public RenderFragment Content { get; set; } = null!;
}